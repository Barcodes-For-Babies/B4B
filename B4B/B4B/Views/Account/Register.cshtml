@model B4B.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row" style="margin-bottom: 100px; background-color:#FC4A1A;">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 clearfix" style="height:50px;">
        <a href="@Url.Action("Index","Home")" align="pull-left" class="loginNavBrand">SQR<span id="homeNavBrand">.</span></a>
    </div> <!-- end Navbar Brand-->
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 clearfix" id="LoginNav" style="height: 50px;">
        <ul id="navItems">
            <li class="lastItem"><a href="~/Account/Login">Sign In</a></li>
        </ul>
    </div> <!-- end Navbar Items-->
</div> <!-- end NavBar-->


<div class="row">
    <div class="col-lg-3 col-md-3 "></div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="formPlate">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "registerBox0 form-control", @placeholder = "First Name" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "registerBox form-control", @placeholder = "Last Name" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "registerBox form-control", @placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "registerBox form-control", @placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "registerBox form-control", @placeholder = "Confirm Password" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <input type="submit" value="Register" class="btn btn-default" style="width:280px; color: white;" />
                    </div>
                </div>
                <p style="color:rgb(128,128,128);">
                    Already Registered? <a href="Login" style="color:#F7B733;">Sign in</a>
                </p>
            }
        </div>
    </div>
    <div class="col-lg-3 col-md-3"></div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
