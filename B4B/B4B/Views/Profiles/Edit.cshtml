                            <div class="thumbnail" style="height: 200px;">
                                <div class="form-group clearfix" style="display:block">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-4" style="margin-left:94px;">
                                        @Html.EditorFor(model => item.MedicalCondition, new { htmlAttributes = new { @class = "form-control", style = "max-width: 400px;", @placeholder = "Medical Condition" } })
                                        @Html.ValidationMessageFor(model => item.MedicalCondition, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-4">
                                        @Html.EditorFor(model => item.Symptoms, new { htmlAttributes = new { @class = "form-control", style = "max-width: 400px;", @placeholder = "Symptoms" } })
                                        @Html.ValidationMessageFor(model => item.Symptoms, "", new { @class = "text-danger" })
                                    </div>

