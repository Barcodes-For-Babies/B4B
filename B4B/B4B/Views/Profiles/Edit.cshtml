                                        @Html.EditorFor(model => item.RelatedInformation, new { htmlAttributes = new { @class = "form-control", style = "max-width: 840px;", @placeholder = "Related Information" } })
                                        @Html.ValidationMessageFor(model => item.RelatedInformation, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-2"></div>
                                </div> <!-- Related Information -->
                            </div>

                        </div>
                    }

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="padding-left: 0; margin-top: 15px;">
                        <div class="thumbnail" id="addNewMedThumb" onclick="addNewMedCard()" style="height: 200px;">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <h3 class="addNewMedCard">Add A New Medical Card</h3>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <input type="submit" value="Save" class="btn btn-default" />

            </div>

        }


    </div>
</div>

